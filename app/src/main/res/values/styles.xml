<resources>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="text_view_general">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="activity_description">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="exercise_description">
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="card_view">
        <item name="android:layout_marginTop">10dp</item>>
        <item name="android:clickable">true</item>
    </style>

    <style name="options">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button_next">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">Siguiente</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="text_view_results">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="button_results">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
