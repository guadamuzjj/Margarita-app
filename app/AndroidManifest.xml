<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stormcoders.margarita_app" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:noHistory="true"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <activity
            android:name=".story.StoryActivity"
            android:label="@string/title_activity_story" >
        </activity>

        <activity
            android:name=".story.StoryDetail"
            android:label="@string/titulo_actividad_detalle"
            android:parentActivityName=".story.StoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".story.StoryActivity" >
             </meta-data>
        </activity>

        <activity
            android:name=".exercises.ExerciseActivity"
            android:noHistory="true"
            android:label="@string/title_activity_exercise" >
        </activity>

        <activity
            android:name=".exercises.MultipleChoice"
            android:noHistory="true"
            android:label="@string/title_multiple_choice" >
        </activity>
        <activity
            android:name=".exercises.TrueOrFalse"
            android:noHistory="true"
            android:label="@string/title_true_or_false" >
        </activity>
        <activity
            android:name=".exercises.ResultActivity"
            android:noHistory="true"
            android:label="@string/title_result_activity" >
        </activity>
    </application>

</manifest>
